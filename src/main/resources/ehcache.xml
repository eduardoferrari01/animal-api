<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="
            http://www.ehcache.org/v3 
            http://www.ehcache.org/schema/ehcache-core-3.7.xsd">
    <persistence directory="spring-boot-ehcache/cache" />
    
    <cache-template name="default">
        <expiry>
            <ttl unit="seconds">600</ttl>
        </expiry>
       <resources>
            <heap>1000</heap>
            <offheap unit="MB">10</offheap>
            <disk persistent="false" unit="MB">20</disk>
        </resources>
    </cache-template>
    
    <cache  alias="animals" uses-template="default">
        <key-type>java.lang.String</key-type>
        <value-type>br.com.animal.api.domain.Animal</value-type>
    </cache>
    
    <cache-template name="template-animalshort">
        	<expiry>
            <ttl unit="seconds">600</ttl>
        </expiry>
       <resources>
            <heap>1000</heap>
            <offheap unit="MB">10</offheap>
            <disk persistent="false" unit="MB">20</disk>
        </resources>
    </cache-template>
    
    <cache alias="animals-short" uses-template="template-animalshort"></cache>
    
</config>